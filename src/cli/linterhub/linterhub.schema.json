{
    "$schema": "http://json-schema.org/draft-04/schema",
	"title": "Example Schema",
	"type": "object",
	"properties": {
        "linters": {
            "type": "array",
            "description": "List of linters",
            "items": {
                "anyOf": [
                    {
                        "type": "string",
                        "description": "Linter name"
                    },
                    {
                        "type": "object",
                        "description": "Linter configuration",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Linter name"
                            },
                            "active": {
                                "type": "boolean",
                                "description": "Whether linter is enabled",
                                "default": true
                            },
                            "config": {
                                "description": "Linter configuration",
                                "oneOf":[
                                    { "$ref": "./coffeelint/args.schema.json" },
                                    { "$ref": "./csslint/args.schema.json" },
                                    { "$ref": "./eslint/args.schema.json" }
                                ]
                            },
                            "exclude": {
                                "type": "object",
                                "properties": {
                                    "mask": {
                                        "type": "string"
                                    },
                                    "line": {
                                        "type": "integer"
                                    },
                                    "id": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                ]  
            }
        }
	}
}