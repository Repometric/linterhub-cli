{
    "$schema": "http://json-schema.org/draft-04/schema",
	"title": "linterhub basic output schema",
    "properties": {
        "engine": {
            "type": "string",
            "description": "Engine name that performed analysis"
        },
        "files": {
            "type": "array",
            "description": "List of files with analysis results",
            "items": {
                "$ref": "#/definitions/file"
            }
        },
        "error": {
            "type": "object",
            "description": "Problem definition if analysis is not possible",
            "properties": {
                "code": {
                    "type": "integer",
                    "description": "Error code"
                },
                "title": {
                    "type": "string",
                    "description": "Error title"
                },
                "description": {
                    "type": "string",
                    "description": "Error decription"
                }
            }
        }
    },
    "definitions": {
        "file": {
            "type": "object",
            "description": "Analysis result for file",
            "properties": {
                "path": {
                    "type": "string",
                    "description": "Relative file path"
                },
                "messages": {
                    "type": "array",
                    "description": "List of messages in the file",
                    "items": {
                        "$ref": "#/definitions/message"
                    }
                }
            }
        },
        "message": {
            "type": "object",
            "description": "Analysis message",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Message content"
                },
                "description": {
                    "type": "string",
                    "description": "Message description"
                },
                "context": {
                    "type": "string",
                    "description": "Message context"
                },
                "severity": {
                    "type": "string",
                    "description": "Message severity",
                    "enum": [
                        "verbose",
                        "hint",
                        "information",
                        "warning",
                        "error"
                    ]
                },
                "line": {
                    "type": "string",
                    "description": "Message for line"
                },
                "row": {
                    "$ref": "#/definitions/interval",
                    "description": "Message row"
                },
                "column": {
                    "$ref": "#/definitions/interval",
                    "description": "Message column"
                },
                "rule": {
                    "$ref": "#/definitions/rule",
                    "description": "Message rule"
                }
            }
        },
        "interval": {
            "type": "object",
            "description": "Interval object",
            "properties": {
                "start": {
                    "type": "integer",
                    "description": "Start"
                },
                "end": {
                    "type": "integer",
                    "description": "End"
                }
            }
        },
        "rule": {
            "type": "object",
            "description": "Analysis rule",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Id"
                },
                "name": {
                    "type": "string",
                    "description": "Description"
                },
                "namespace": {
                    "type": "string",
                    "description": "Namespace"
                }
            }
        }
    }
}